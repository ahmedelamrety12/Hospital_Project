@model CareNet_System.ViewModels.BillsViewModels

@{
    ViewData["Title"] = "Delete Patient Bill";
}

<div class="container mt-4">
    <div class="row mb-3">
        <div class="col">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-action="Index">Patient Bills</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Delete</li>
                </ol>
            </nav>
        </div>
    </div>

    <div class="card shadow">
        <div class="card-header bg-danger text-white">
            <h4 class="mb-0">Delete Patient Bill</h4>
        </div>
        <div class="card-body">
            <h5 class="text-danger mb-4">Are you sure you want to delete this patient bill?</h5>

            <div class="row mb-4">
                <div class="col-md-6">
                    <div class="card border-light h-100">
                        <div class="card-body">
                            <h5 class="card-title mb-3">Patient Information</h5>
                            <dl class="row">
                                <dt class="col-sm-4">Patient Name:</dt>
                                <dd class="col-sm-8">@Html.DisplayFor(model => model.patient_id)</dd>

                                <dt class="col-sm-4">Insurance Number:</dt>
                                <dd class="col-sm-8">@Html.DisplayFor(model => model.insurance_id)</dd>
                            </dl>
                        </div>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="card border-light h-100">
                        <div class="card-body">
                            <h5 class="card-title mb-3">Billing Details</h5>
                            <dl class="row">
                                <dt class="col-sm-4">Amount Due:</dt>
                                <dd class="col-sm-8">@Html.DisplayFor(model => model.total_amount)</dd>

                                
                            </dl>
                        </div>
                    </div>
                </div>
            </div>

            <form asp-action="Delete" id="deleteForm">
                <input type="hidden" asp-for="Id" />

                <div class="d-flex justify-content-between">
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-left me-1"></i> Back to List
                    </a>
                    <button type="submit" class="btn btn-danger">
                        <i class="bi bi-trash me-1"></i> Confirm Delete
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            $('#deleteForm').on('submit', function() {
                $('button[type="submit"]').html('<span class="spinner-border spinner-border-sm me-2" role="status" aria-hidden="true"></span>Deleting...');
                $('button[type="submit"]').prop('disabled', true);
            });
        });
    </script>
}